
<section>
  <div class="container mt-4">
      <div class="row">
          <div class="col-md-6">
              <h2 class="text-center">Edit Category</h2>
              <% 
          if(adMsg){
            %>
            <script>
                Swal.fire('<%=adMsg%>')
            </script>
            <%
          }
          %>
              <form action="/admin/edit-category?id=<%=category._id%>" method="post">
                  <label for="">Category</label>
                  <input type="text" name="Category" class="form-control" value="<%=category.categoryname%>" pattern="[^\s@<>]+" placeholder="Enter New Category Name" required>
                  <label for="">Description</label>
                  <input type="text" name="Description" class="form-control" value="<%=category.description%>" pattern="[^\s@<>]+" placeholder="Enter New Description" required>
                  <button type="submit" class="btn btn-success mt-4">Add</button>
              </form>
          </div>
      </div>
  </div>
</section>