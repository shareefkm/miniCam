
<%- include('../partials/adminHeader.ejs')-%>
            
            <div class="mt-5">
                <div class="row">
                  <div class="">
                    <a href="/admin/addproduct" class=" btn btn-success" style="float:right">Add</a>
                    </div>
                </div>
                  <div class="table-responsive mt-2">
                    <% 
                    if(adMsg){
                      %>
                      <script>
                        Swal.fire('<%=adMsg%>')
                        </script>
                     
                      <%
                    }
                    %>
                      <table id="product" class="table mt-5 table-bordered table-striped text-black">
                      <thead>
                          <tr>
                        <th>Sl No.</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Controles</th>
                      </tr>
                      </thead>
                      <tbody>
                      <% if(products.length > 0){%>
                         <% for(let i=0;i<products.length;i++){%>
                                  <tr>
                                          <td><%=i+1%></td>
                                          <td><%=products[i].name%></td>
                                          <td><%=products[i].description%></td>
                                          <td><% if (products[i].image.length > 0) { %>
                                          <img style="width: 50px; height: 30px;" src="/images/product/<%=products[i].image[0].path%>" alt="">
                                         <% } %></td>
                                          <td> â‚¹:<%=products[i].price%></td>
                                          <td>
                                            <a href="/admin/editproduct?id=<%=products[i]._id%>" class="btn btn-warning">Edit</a>
                                            <% if(products[i].is_deleted == 0){%>

                                              <a href="/admin/deleteproduct?id=<%=products[i]._id%>" onclick=" return confirm('Do you want to Unlist <%=products[i].name%> ?')" class="btn btn-danger">Ulist</a>
                                           <% }else{%>
                                            <a href="/admin/deleteproduct?id=<%=products[i]._id%>" onclick=" return confirm('Do you want to List <%=products[i].name%> ?')" class="btn btn-success">List</a>
                                         <%  }%>
                                             
                                            </td>
                                          </tr>       
                                          <% } %>
                                    <% }else{%><tr>
                                              <td colspan="5">Category Not fount</td>
                                              </tr><%} %>
                                              </tbody>
                                              </table>
                    </div>
                    
              </div>
        </div>
    </div>
</div>
<%- include('../partials/adminFooter.ejs')-%>
<script>$(document).ready( function () {$('#product').DataTable();});</script>
