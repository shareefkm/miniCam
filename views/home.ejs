<%- include('./partials/userHeader.ejs')-%>
<%if(message){ %>
 <script>
   Swal.fire('<%=message%>')
  </script>
  <%} %>

<!-- Hero Section Begin -->
<section class="hero">
  <div class="hero__slider owl-carousel">
    <% if(banners.length>0){%>
        <% banners.forEach(element => {%>    
            <div class="hero__items set-bg" data-setbg="/images/product/<%=element.image%>">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6><%=element.Des1%></h6>
                                <h2><%=element.Des2%></h2>
                                <p><%=element.Des3%></p>
                                <a href="product" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       <% }); %>
   <% } %>
  </div>
</section>


<!-- Product Section Begin -->
<section class="product spad">
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <ul class="filter__controls">
                  <li class="active" data-filter="*">Best Sellers</li>
                  <li data-filter=".new-arrivals">New Arrivals</li>
                  <li data-filter=".hot-sales">Hot Sales</li>
              </ul>
          </div>
      </div>
      <div class="row product__filter">
        <%if(products.length >0){%>
          <% products.forEach(element => {%>
            <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                <div class="product__item">
                  <% if (element.image.length > 0) { %>
                    <div class="product__item__pic set-bg" data-setbg="/images/product/<%=element.image[0].path%>">
                      <% } %>
                        <ul class="product__hover">
                            <li><a href="/addtowishlist?id=<%=element._id%>"><img src="images/icon/heart.png" alt=""></a></li>
                            <li><a href="/productDetails?id=<%=element._id%>"><img src="images/icon/search.png" alt=""></a></li>
                        </ul>
                    </div>
                    <div class="product__item">
                        <a href="#" onclick="addToCart('<%=element._id%>')" class="add-cart">+ Add To Cart</a>
                        <h6><%=element.name %></h6>
                        <div class="rating">
                           
                        </div>
                        <h5>â‚¹:<%=element.price  %></h5>
                        <div class="product__color__select">
                           
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
        <% }else{%> <p>Product not found</p><%} %>
         
</section>
<!-- Product Section End -->

<%- include('./partials/userFooter.ejs')-%>
