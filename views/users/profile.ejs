<%- include('../partials/userHeader.ejs')-%> <%if(message){ %>
<script>
  Swal.fire("<%=message%>");
</script>
<% } %>
<div class="container mt-5">
  <div class="main-body">
    <div class="row">
      <div class="col-lg-4">
        <div class="card">
          <div class="card-body p-0">
            <div class="d-flex flex-column align-items-center text-center">
              <img
                src="https://bootdey.com/img/Content/avatar/avatar6.png"
                alt="Admin"
                class="rounded p-1 bg-primary"
                width="110"
              />
              <div class="mt-3">
                <h4><%=isUser.name%></h4>
                <p class="text-secondary mb-1"><%=isUser.email%></p>
                <p class="text-muted font-size-sm"></p>
              </div>
            </div>
            <hr class="my-4" />
            <ul class="list-group list-group-flush">
              <li
                class="list-group-item-action d-flex justify-content-between align-items-center flex-wrap"
              >
                <h5>
                  <a href="editprofile" class="text-decoration-none"
                    >Update Profile</a
                  >
                </h5>
              </li>
              <li
                class="list-group-item-action d-flex justify-content-between align-items-center flex-wrap"
              >
                <h5>
                  <a href="orderDetails" class="text-decoration-none"
                    >Order Details</a
                  >
                </h5>
              </li>
              <li
                class="list-group-item-action d-flex justify-content-between align-items-center flex-wrap"
              >
                <h5>
                  <a href="addAddress" class="text-decoration-none"
                    >Add Address</a
                  >
                </h5>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card">
          <div class="card-body">
            <%if(isUser.address.length>0){%>
            <%isUser.address.forEach((addr,index)=>{%>
            <div class="row m-3 border bg-white text-black">
              <ul style="list-style-type: none">
                <li>
                  <input
                    type="radio"
                    name="address"
                    value="<%index%>>"
                    style="float: left"
                  />
                  <div style="margin-left: 25px">
                    <%=addr.firstname%><br />
                    <%=addr.lastname%><br />
                    <%=addr.email%><br />
                    <%=addr.mobile%><br />
                    <%=addr.address%><br />
                    <%=addr.city%><br />
                    <%=addr.state%><br />
                    <%=addr.zip%><br />
                  </div>
                </li>
              </ul>
              <p>
                <a href="/editaddress?index=<%=index%>" class=""
                  >Edit Address
                </a>
                <a href="/deleteAddress?index=<%= index %>" class="text-danger">
                  Delet</a
                >
              </p>
            </div>
            <% }) %> <% }else{%>
            <h5>
              <a href="addAddress" class="text-decoration-none">Add Address</a>
            </h5>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/userFooter.ejs')-%>
