<section class="h-100 h-custom bg-black register">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="rounded-3">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Create an account</h3>
            <% if(message){ %>
            <script>
              Swal.fire("<%=message%>");
            </script>
            <% } %>

            <form
              method="post"
              action="/signup"
              class="px-md-2"
              name="myform"
              onsubmit="return validateform()"
            >
              <div class="form-outline mb-4">
                <label class="form-label" for="form3Example1q">Name</label>
                <input
                  pattern="[^\s@<>]+"
                  type="text"
                  id="form3Example1q username"
                  class="form-control"
                  name="name"
                  required
                />
              </div>
              <div class="form-outline mb-4">
                <label class="form-label" for="form3Example1q">Email</label>
                <input
                  type="email"
                  id="form3Example1q"
                  class="form-control"
                  name="email"
                  required
                />
              </div>
              <div class="form-outline mb-4">
                <label class="form-label" for="form3Example1q"
                  >Mobile Number</label
                >
                <input
                  type="text"
                  id="form3Example1q"
                  class="form-control"
                  name="mobile"
                  required
                />
              </div>
              <div class="form-outline mb-4">
                <label class="form-label" for="password-input">Password</label>
                <input
                  pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+\-=[\]{};':&quot;\\|,.<>\/?])[^\s]{8,}$"
                  type="password"
                  id="password-input"
                  class="form-control"
                  name="password"
                  required
                />
                <p class="text-center text-secondary">
                  password must be at least 8 characters,one uppercase,one digit
                  and one special character
                </p>
              </div>
              <div class="form-outline mb-4">
                <label class="form-label" for="confirm-password-input"
                  >Confirm Password</label
                >
                <input
                  type="password"
                  id="confirm-password-input"
                  class="form-control"
                  name="confirmPassword"
                  required
                />
              </div>

              <button type="submit" class="btn btn-success btn-lg mb-1">
                Signup
              </button>
              <p class="text-center text-muted mt-5 mb-0">
                Have already an account?
                <a href="login" class="fw-bold text-body"><u>Login here</u></a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
